{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "JwtSettings": {
    "Subject": "AppizsoftSoftwareAPI", //konu
    "Issuer": "Appizsoft Software", //kimin oluşturduğu
    "Audience": "appizsoftcom", //kimin için olucağı
    "SecretKey": "bu-api-sunucusu-appizsoftun--super-gizli-anahtarı-ile-sifrelenmistir.", //kısa key yazılırsa hata verir.
    "AccessTokenExpirationMinutes": 60 //1 saat
  },
  "SmtpSettings": {
    "Server": "smtp.example.com",
    "Port": 587,
    "Username": "your_smtp_username",
    "Password": "your_smtp_password",
    "DisplayName": "Appizsoft Yazılım"
  },
  "ExternalLoginSettings": {
    "Facebook": {
      "Client_ID": "<Client_ID>",
      "Client_Secret": "<Client_Secret>"
    },
    "Google": {
      "Client_ID": "<Client_ID>"
    }
  }
}
